{
  "name": "service-pos",
  "version": "1.0.0",
  "description": "Micro servicio para controlar y monitorear el POS y la impresora del totem digital",
  "main": "dist/index.js",
  "author": "WIT",
  "contributors": [
    {
      "name": "Edixon Pi√±a",
      "email": "edixonalbertto@gmail.com",
      "url": "https://edixonalberto.com"
    }
  ],
  "license": "UNLICENSED",
  "private": true,
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "test": "node test/index.js",
    "build": "tsc && tsc-alias",
    "dev": "cross-env NODE_ENV=development nodemon --config",
    "start": "npm run build && cross-env NODE_ENV=production pm2 start dist --name app"
  },
  "nodemonConfig": {
    "ext": ".ts,.env",
    "watch": [
      "src",
      "env"
    ],
    "verbose": false,
    "exec": "npm run build && node dist"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.4",
    "lowdb": "^3.0.0",
    "pm2": "^5.1.2",
    "socket.io": "^4.4.0",
    "transbank-pos-sdk": "^2.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/lowdb": "^1.0.11",
    "@types/node": "^16.11.10",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "tsc-alias": "^1.4.1",
    "typescript": "^4.5.2"
  },
  "engine": {
    "node": "~16.13.0"
  }
}
